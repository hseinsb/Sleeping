{
  "appId": "com.sleepoptimizer.app",
  "appName": "Sleep Optimizer",
  "webDir": ".",
  "server": {
    "androidScheme": "https"
  },
  "ios": {
    "scheme": "Sleep Optimizer",
    "minVersion": "15.0"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#F2F2F7",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "LIGHT_CONTENT",
      "backgroundColor": "#007AFF"
    }
  }
}
